#include <iostream>
#include <string>
#include<sstream> 
#include<cmath>
using namespace std;
int main(){
    long long n,y,sum=0,odd=0,even=0;
    cin>>n;
    while(n){
        cin>>y;
        sum=y+sum;
        if(y%2==0){
            even++;
        }
        else
        odd++;
       
       n--;
    }
    cout<<sum<<" "<<odd<<" "<<even;
}
